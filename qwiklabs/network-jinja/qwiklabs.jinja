{#
Note that the follow vars are used to simplify value references. 
#}

{% set NETWORK_NAME = "lab-network" %}
{% set ZONE1 = "us-central1-f" %}
{% set ZONE2 = "us-central1-c" %}
{% set NAME1 = "lab-1" %}
{% set NAME2 = "lab-2" %}
{% set HOST_TAG = "labvm" %}

resources:
- name: {{ NAME1 }}
  type: vm.jinja
  properties:
    machineType: f1-micro
    zone: {{ ZONE1 }}
    network: {{ NETWORK_NAME }}
    hosttag: {{ HOST_TAG }}
- name: {{ NAME2 }}
  type: vm.jinja
  properties:
    machineType: f1-micro
    zone: {{ ZONE2 }}
    network: {{ NETWORK_NAME }}
    hosttag: {{ HOST_TAG }}
- name: {{ NETWORK_NAME }}
  type: network.jinja
- name: firewall
  type: firewall.jinja
  properties:
    network: {{ NETWORK_NAME }}
