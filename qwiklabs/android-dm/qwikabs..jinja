resources:
- type: gcp-types/compute-v1:instances
  name: vm
  properties:
    zone: {{ properties["zone"] }}
    machineType: zones/{{ properties["zone"] }}/machineTypes/n1-standard-4
    disks:
    - boot: true
      autoDelete: true
      initializeParams:
        sourceImage: projects/qwiklabs-resources/global/images/vnc-android-studio-34-new
    networkInterfaces:
    - network: global/networks/default
      accessConfigs:
      - name: External NAT
        type: ONE_TO_ONE_NAT
    serviceAccounts:
      - email: default
        scopes:
          - 'https://www.googleapis.com/auth/cloud.useraccounts.readonly'
          - 'https://www.googleapis.com/auth/devstorage.read_only'
          - 'https://www.googleapis.com/auth/logging.write'
          - 'https://www.googleapis.com/auth/monitoring.write'
    tags:
      items:
        - "vnc"
    metadata:
      items:
      - key: startup-script
        value: |
          #!/bin/bash
          bash -c 'HOME=/home/lab-user;cd /home/lab-user/docker-vnc-android-studio ; pwd ; . run &'

- name: vnc-firewall-rule
  type: compute.v1.firewall
  properties:
    sourceRanges: ["0.0.0.0/0"]
    targetTags: [ "vnc" ]
    allowed:
    - IPProtocol: TCP
      ports: ["5901", "6901"]
